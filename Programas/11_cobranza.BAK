		SELECT distinct(no_fac) no_fac,fec_rea,fecha FROM cobpaso INTO TABLE ult_mes_pag

		SELECT cobpaso
		INDEX on no_fac TO b


		SELECT ult_mes_pag
		GO top IN ult_mes_pag
		DO WHILE !EOF('ult_mes_pag') 

